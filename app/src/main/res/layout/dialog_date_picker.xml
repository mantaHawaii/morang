<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시작일"
                    android:textSize="20dp"
                    android:textColor="@color/text_dark_grey"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp">
                        <ImageButton
                            android:id="@+id/ib_a_s_year"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:scaleType="fitCenter"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:foreground="?android:selectableItemBackground"
                            android:src="@drawable/ic_round_keyboard_arrow_up_24"
                            android:tint="@color/light_grey"/>
                        <TextView
                            android:id="@+id/tv_s_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2022"
                            android:textSize="20dp"
                            android:textColor="@color/text_dark_grey"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <ImageButton
                            android:id="@+id/ib_m_s_year"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:scaleType="fitCenter"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:foreground="?android:selectableItemBackground"
                            android:src="@drawable/ic_round_keyboard_arrow_down_24"
                            android:tint="@color/light_grey"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp">
                        <ImageButton
                            android:id="@+id/ib_a_s_month"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:scaleType="fitCenter"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:foreground="?android:selectableItemBackground"
                            android:src="@drawable/ic_round_keyboard_arrow_up_24"
                            android:tint="@color/light_grey"/>
                        <TextView
                            android:id="@+id/tv_s_month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="07"
                            android:textSize="20dp"
                            android:textColor="@color/text_dark_grey"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <ImageButton
                            android:id="@+id/ib_m_s_month"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:scaleType="fitCenter"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:foreground="?android:selectableItemBackground"
                            android:src="@drawable/ic_round_keyboard_arrow_down_24"
                            android:tint="@color/light_grey"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp">
                        <ImageButton
                            android:id="@+id/ib_a_s_day"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:scaleType="fitCenter"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:foreground="?android:selectableItemBackground"
                            android:src="@drawable/ic_round_keyboard_arrow_up_24"
                            android:tint="@color/light_grey"/>
                        <TextView
                            android:id="@+id/tv_s_day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="21"
                            android:textSize="20dp"
                            android:textColor="@color/text_dark_grey"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <ImageButton
                            android:id="@+id/ib_m_s_day"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:scaleType="fitCenter"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:foreground="?android:selectableItemBackground"
                            android:src="@drawable/ic_round_keyboard_arrow_down_24"
                            android:tint="@color/light_grey"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종료일"
                    android:textSize="20dp"
                    android:textColor="@color/text_dark_grey"
                    android:textStyle="bold"
                    android:layout_marginTop="35dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp">
                        <ImageButton
                            android:id="@+id/ib_a_e_year"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:scaleType="fitCenter"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:foreground="?android:selectableItemBackground"
                            android:src="@drawable/ic_round_keyboard_arrow_up_24"
                            android:tint="@color/light_grey"/>
                        <TextView
                            android:id="@+id/tv_e_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2022"
                            android:textSize="20dp"
                            android:textColor="@color/text_dark_grey"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <ImageButton
                            android:id="@+id/ib_m_e_year"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:scaleType="fitCenter"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:foreground="?android:selectableItemBackground"
                            android:src="@drawable/ic_round_keyboard_arrow_down_24"
                            android:tint="@color/light_grey"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp">
                        <ImageButton
                            android:id="@+id/ib_a_e_month"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:scaleType="fitCenter"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:foreground="?android:selectableItemBackground"
                            android:src="@drawable/ic_round_keyboard_arrow_up_24"
                            android:tint="@color/light_grey"/>
                        <TextView
                            android:id="@+id/tv_e_month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="07"
                            android:textSize="20dp"
                            android:textColor="@color/text_dark_grey"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <ImageButton
                            android:id="@+id/ib_m_e_month"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:scaleType="fitCenter"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:foreground="?android:selectableItemBackground"
                            android:src="@drawable/ic_round_keyboard_arrow_down_24"
                            android:tint="@color/light_grey"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp">
                        <ImageButton
                            android:id="@+id/ib_a_e_day"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:scaleType="fitCenter"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:foreground="?android:selectableItemBackground"
                            android:src="@drawable/ic_round_keyboard_arrow_up_24"
                            android:tint="@color/light_grey"/>
                        <TextView
                            android:id="@+id/tv_e_day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="21"
                            android:textSize="20dp"
                            android:textColor="@color/text_dark_grey"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <ImageButton
                            android:id="@+id/ib_m_e_day"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:scaleType="fitCenter"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/white"
                            android:foreground="?android:selectableItemBackground"
                            android:src="@drawable/ic_round_keyboard_arrow_down_24"
                            android:tint="@color/light_grey"/>
                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_set_term"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="설정하기"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="39dp"
                    android:foreground="?android:selectableItemBackground"
                    android:backgroundTint="@color/main"
                    android:background="@drawable/rectangle_no_line_rounded_corner"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>