<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageButton
        android:id="@+id/ib_grade"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/grade2"
        android:scaleType="fitCenter"
        android:background="@color/white"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"/>

    <View
        android:id="@+id/view"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        app:layout_constraintBottom_toBottomOf="@id/ib_grade"
        app:layout_constraintEnd_toEndOf="@id/ib_grade"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@id/ib_grade"
        app:layout_constraintTop_toTopOf="@id/ib_grade"
        app:layout_constraintVertical_bias="0.7" />

    <ImageView
        android:id="@+id/iv_blind"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#EEFFFFFF"
        android:src="@drawable/ic_baseline_lock_24"
        android:tint="@color/light_grey"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/ib_grade"
        app:layout_constraintBottom_toBottomOf="@id/ib_grade"
        app:layout_constraintStart_toStartOf="@id/ib_grade"
        app:layout_constraintEnd_toEndOf="@id/ib_grade"/>

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_baseline_check_circle_24"
        android:tint="@color/innuendo"
        android:background="@drawable/circle_no_line"
        android:backgroundTint="@color/black"
        android:visibility="gone"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/ib_grade"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/ib_grade"/>

</androidx.constraintlayout.widget.ConstraintLayout>